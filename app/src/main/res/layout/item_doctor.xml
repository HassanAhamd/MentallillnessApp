<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
             android:layout_centerVertical="true"
                android:id="@+id/ivDocPic"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp" />
            <TextView
                android:textColor="@color/secoundaryColor"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toRightOf="@+id/ivDocPic"
                android:text="Doc name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:fontFamily="@font/acme_regular"
                android:id="@+id/tvDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/tvDocName"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toRightOf="@+id/ivDocPic"
                android:text="Doc name sdadfaerferferferferfwergfewrgwergwergewrwergwergwergwergwergwerg"
                android:maxLines="2"
                android:textStyle="normal"
                android:textSize="@dimen/_10sdp"
                android:ellipsize="end"
                android:id="@+id/tvDocSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>
    
</RelativeLayout>